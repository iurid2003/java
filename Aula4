import java.util.Scanner;

public class Aula4 {

    public static void main(String[] args){
        // cricao de um objeto da classe scanner
        Scanner leitor = new Scanner(System.in);
        int n1 = 0 ;
        int n2 = 0 ;
        int n3 = 0 ;
        String nome = "";
        //constante
        final int Media = 60 ;

        int res = 0 ;

        System.out.printf("Digite um numero : ");
        n1 = leitor.nextInt();
        System.out.printf("Digite outro numero : ");
        n2 = leitor.nextInt();
        System.out.print("Digite um nome : ");
        nome = leitor.next();
        res = n1 + n2 ;

        System.out.printf("Soma de %d com %d e igual a %d senhor %s",n1,n2,res,nome);
    }

}
